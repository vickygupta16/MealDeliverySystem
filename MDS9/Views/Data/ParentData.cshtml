@model IEnumerable<MDS9.Models.UserProfile>
<html>
    <head>
        <title>Data</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="shortcut icon" type="image/x-icon" href="~/Content/themes/base/images/Logo1.jpg"/>
        <style>
            #sidebar {
              width: 200px;
              background: #2c3e50;
              position: absolute;
              height: 100%;
              top: 0;
              left: -200px;
              transition: left 0.5s ease;
            }
            #sidebar.visible {
              left: 0px;
              transition: left 0.7s ease;
            }
            .ul2 {
              margin: 0;
              padding: 0;
            }
            .li2 {
              list-style: none;
              padding: 10px 0 10px 10px;
              background: #46637F;
              border-bottom: 1px solid #233140;
            }
            .li2 a {
              text-decoration: none;
              color: white;
            }
            #sidebar-btn {
              display: inline-block;
              vertical-align: middle;
              width: 20px;
              height: 15px;
              cursor: pointer;
              margin: 20px;
              position: absolute;
              right: -60px;
              top: 0px;
            }
            #sidebar-btn span {
              background-color: yellow;
              height: 2px;
              display: block;
              margin-bottom: 5px;
            }
            #sidebar-btn span:nth-child(2) {
              width: 75%;
            }
            .ul1{
                font-size: 20px;
                color:blue;
                padding-left:40px;
            }
            .li1 {
                color: blue;
                display:inline;
            }
            .li1 a{
                color: blue;
                text-decoration:none;
            }
            .mysec {
                font-size:18px;
            }
            .nav-item {
                padding:10px;
            }
            .mysec a:hover{
                text-decoration:none;
                background-color:yellow;
                padding:5px;
                border-radius:5px;
            }
        </style>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#sidebar-btn').on('click', function () {
                    $('#sidebar').toggleClass('visible');
                });
            });
        </script>
    </head>
    <body>
        
        <header style="background-color:black;padding:10px">
                <div style="text-align:center">
                    <section class="mysec">
                        <ul class="nav justify-content-center">
                          <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home")
                          </li>
                          <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home")
                          </li>
                          <li class="nav-item">
                              @{Html.RenderPartial("_LoginPartial");}
                          </li>
                        </ul>
                    </section>
                </div>
        </header>   

        <div id="sidebar">
            <ul class="ul2">
              <li class="li2">@Html.ActionLink("Home","Index", "Home")</li>
              <li class="li2">@Html.ActionLink("Add Meal","Create","Meal")</li>
              <li class="li2">@Html.ActionLink("Meal List","Index","Meal")</li>
              <li class="li2">@Html.ActionLink("Autogenerated Bill List","BillList","Bill")</li>
              <li class="li2">@Html.ActionLink("Generate Bill","Create","Bill")</li>
              <li class="li2">@Html.ActionLink("Add Student","Create","Student")</li>
              <li class="li2">@Html.ActionLink("Student List","Index","Student")</li>
                <li></li>
              <li class="li2">@Html.ActionLink("Meal Order Data","Index","Data")</li>
              <li class="li2">@Html.ActionLink("Parent Data","ParentData","Data")</li>
              <li class="li2">@Html.ActionLink("Student Data","StudentData","Data")</li>
              <li class="li2">@Html.ActionLink("Bill Data","BillData","Data")</li>
              <li class="li2">@Html.ActionLink("Meal Data","MealData","Data")</li>
            </ul>
            <div id="sidebar-btn">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        

        <div class="card" style="width:900px;margin:auto;margin-top:30px;
            box-shadow:10px 10px 5px grey" align="center">
            <h5 class="card-header" style="background-color:lightcoral">Parent Data</h5>
            <div class="card-body" style="background-color:lightpink">
                <table cellpadding="5px" align="center" style="text-align:center;"
                    rules="rows" frame="hsides">
                    <tr>
                        <th>Parent ID</th>
                        <th>Email ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Number of Children</th>
                        <th>Address</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem=>item.UserId)</td>
                            <td>@Html.DisplayFor(modelItem=>item.UserName)</td>
                            <td>@Html.DisplayFor(modelItem=>item.FName)</td>
                            <td>@Html.DisplayFor(modelItem=>item.LName)</td>
                            <td>@Html.DisplayFor(modelItem=>item.Gender)</td>
                            <td>@Html.DisplayFor(modelItem=>item.NOC)</td>
                            <td>@Html.DisplayFor(modelItem=>item.Address)</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </body>
</html>
